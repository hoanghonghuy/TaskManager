@{
    Layout = "_Layout_Auth";
}
@{
    ViewData["Title"] = "Kiểm tra Email";
}
<div class="card p-4 mx-auto text-center" style="max-width: 500px;">
    <h1 class="card-title">@ViewData["Title"]</h1>
    <p>Nếu email của bạn tồn tại trong hệ thống, chúng tôi đã gửi một link để đặt lại mật khẩu.</p>

    @if (TempData["ResetLink"] != null)
    {
        <div class="alert alert-info mt-3">
            <p class="fw-bold">Link đặt lại mật khẩu (dành cho mục đích phát triển):</p>
            <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
        </div>
    }
</div>