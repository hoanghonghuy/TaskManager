<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            overflow: hidden; /* Ngăn cuộn trang chính khi panel hiển thị */
        }

        .sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            padding: 1rem;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-right 0.3s ease-in-out;
            overflow-y: auto;
            height: 100vh;
        }

        /* Thêm style cho panel chi tiết công việc */
        .task-details-panel {
            position: fixed;
            top: 0;
            right: 0;
            width: 400px; /* Độ rộng của panel */
            height: 100vh;
            background-color: #242424; /* Màu nền dark mode */
            border-left: 1px solid #3d3d3d;
            transform: translateX(100%);
            transition: transform 0.3s ease-in-out;
            padding: 20px;
            z-index: 1050; /* Đặt trên các phần tử khác */
            overflow-y: auto;
        }

            .task-details-panel.show {
                transform: translateX(0);
            }

        .main-content.shift {
            margin-right: 400px;
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease-in-out;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
            }

            .header-navbar {
                margin-left: 0 !important;
            }

            .task-details-panel {
                width: 100%; /* Trên mobile, panel chiếm toàn màn hình */
            }

            .main-content.shift {
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex" style="height: 100vh;">
        <nav class="sidebar d-none d-md-block" id="sidebar">
            <a class="navbar-brand mb-4 d-block" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-calendar-check-fill me-2"></i>TaskManager
            </a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house me-2"></i>Trang chủ
                    </a>
                </li>
                @if (User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Tasks" asp-action="Index">
                            <i class="bi bi-list-task me-2"></i>Công việc
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Calendar" asp-action="Index">
                            <i class="bi bi-calendar-event me-2"></i>Lịch
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Projects" asp-action="Index">
                            <i class="bi bi-folder me-2"></i>Danh sách
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Tasks" asp-action="Index" asp-route-status="Pending">
                            <i class="bi bi-check-square me-2"></i>Chưa hoàn thành
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Tasks" asp-action="Index" asp-route-status="Completed">
                            <i class="bi bi-check-all me-2"></i>Đã hoàn thành
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <div class="main-content flex-grow-1">
            <header class="d-flex justify-content-between align-items-center py-2 border-bottom header-navbar">
                <button class="btn btn-primary d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                    <i class="bi bi-list"></i>
                </button>
                <div class="d-flex w-100 me-3 ms-md-3">
                    <form asp-controller="Tasks" asp-action="Index" method="get" class="d-flex w-100">
                        <input name="searchString" class="form-control me-sm-2" type="text" placeholder="Tìm kiếm công việc, ghi chú...">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Tìm</button>
                    </form>
                </div>
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Xin chào, @User.Identity.Name!
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                                        <button type="submit" class="btn btn-link text-white text-decoration-none w-100 text-start">Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </header>
            <main role="main" class="pb-3 mt-4">
                @RenderBody()
            </main>
        </div>

        <div id="task-details-panel" class="task-details-panel">
            <div class="d-flex justify-content-end mb-3">
                <button id="close-panel-btn" class="btn-close btn-close-white" aria-label="Close"></button>
            </div>
            <div id="task-details-content">
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted" style="margin-left: 250px;">
        <div class="container">
            &copy; 2025 - TaskManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Kích hoạt Tooltips của Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Logic ẩn/hiện panel chi tiết công việc
        document.getElementById('close-panel-btn').addEventListener('click', function () {
            document.getElementById('task-details-panel').classList.remove('show');
            document.querySelector('.main-content').classList.remove('shift');
        });

        // Bắt sự kiện click vào liên kết xem chi tiết công việc
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.view-task-details').forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault(); // Ngăn hành vi mặc định của thẻ <a>
                    var taskId = this.dataset.taskId;
                    var panel = document.getElementById('task-details-panel');
                    var mainContent = document.querySelector('.main-content');
                    var detailsContent = document.getElementById('task-details-content');

                    // Hiển thị loading spinner
                    detailsContent.innerHTML = '<div class="text-center mt-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';

                    // Gửi yêu cầu AJAX
                    fetch(`/Tasks/Details/${taskId}?isPartial=true`)
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.text();
                        })
                        .then(html => {
                            detailsContent.innerHTML = html;
                            panel.classList.add('show');
                            mainContent.classList.add('shift');
                            // Kích hoạt lại tooltips cho nội dung mới
                            var tooltipTriggerListNew = [].slice.call(detailsContent.querySelectorAll('[data-bs-toggle="tooltip"]'))
                            var tooltipListNew = tooltipTriggerListNew.map(function (tooltipTriggerEl) {
                                return new bootstrap.Tooltip(tooltipTriggerEl)
                            })
                        })
                        .catch(error => {
                            console.error('There has been a problem with your fetch operation:', error);
                            detailsContent.innerHTML = '<div class="alert alert-danger mt-3">Không thể tải chi tiết công việc.</div>';
                        });
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>