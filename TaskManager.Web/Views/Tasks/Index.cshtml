@model IEnumerable<TaskManager.Data.Models.Task>

@{
    ViewData["Title"] = "Công việc";
    string? currentStatus = ViewBag.Filter;
    string? currentSearch = ViewBag.SearchString;
    int? currentProjectId = ViewBag.ProjectId;

    // Nhóm các công việc theo ngày hết hạn để hiển thị tiêu đề (Hôm nay, Ngày mai, v.v.)
    var tasksGroupedByDate = Model
        .GroupBy(t => t.DueDate?.Date)
        .OrderBy(g => g.Key ?? DateTime.MaxValue);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">Công việc</h1>
    <div class="d-flex align-items-center gap-2">
        <div class="dropdown">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-sort-down me-1"></i> Sắp xếp
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParam" asp-route-status="@currentStatus" asp-route-searchString="@currentSearch" asp-route-projectId="@currentProjectId">Theo ngày</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="@ViewBag.PrioritySortParam" asp-route-status="@currentStatus" asp-route-searchString="@currentSearch" asp-route-projectId="@currentProjectId">Theo độ ưu tiên</a></li>
            </ul>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Thêm công việc
        </a>
    </div>
</div>

<!-- Form Thêm nhanh -->
<div class="task-item-new mb-4">
    <i class="bi bi-plus-lg me-2"></i>
    <input type="text" id="quick-add-task-title" class="form-control-plaintext" placeholder="Thêm một công việc và nhấn Enter...">
</div>


@if (Model.Any())
{
    foreach (var group in tasksGroupedByDate)
    {
        <h5 class="text-muted mt-4 mb-2">
            @if (group.Key.HasValue)
            {
                if (group.Key.Value == DateTime.Today)
                {
                    <text>Hôm nay</text>
                }
                else if (group.Key.Value == DateTime.Today.AddDays(1))
                {

                    <text>Ngày mai</text>
                }
                else
                {

                    @group.Key.Value.ToString("dd/MM/yyyy")
                }
            }
            else
            {
                <text>Chưa có ngày hết hạn</text>
            }
        </h5>

        <div class="task-list">
            @foreach (var item in group)
            {
                <div class="task-item @(item.Status == "Completed" ? "task-completed" : "")" id="task-row-@item.Id">
                    <!-- Checkbox -->
                    <div class="task-checkbox">
                        <form asp-action="ToggleTaskStatus" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn-check-task" title="@(item.Status == "Completed" ? "Bỏ hoàn thành" : "Hoàn thành")">
                                @if (item.Status == "Completed")
                                {
                                    <i class="bi bi-check-circle-fill"></i>
                                }
                                else
                                {

                                    <i class="bi bi-circle"></i>
                                }
                            </button>
                        </form>
                    </div>

                    <!-- Nội dung chính (Khu vực click để xem chi tiết) -->
                    <a href="#" class="task-content-link view-task-details" data-task-id="@item.Id">
                        <div class="task-content">
                            <div class="task-title @(item.Status == "Completed" ? "text-decoration-line-through" : "")">
                                @item.Title
                            </div>
                            <div class="task-meta">
                                @if (item.Project != null)
                                {
                                    <span class="meta-item"><i class="bi bi-folder"></i> @item.Project.Name</span>
                                }
                                @if (item.TaskTags != null && item.TaskTags.Any())
                                {
                                    <span class="meta-item"><i class="bi bi-tags"></i> @string.Join(", ", item.TaskTags.Select(tt => tt.Tag.Name))</span>
                                }
                                @if (!string.IsNullOrEmpty(item.RecurrenceRule))
                                {
                                    <span class="meta-item"><i class="bi bi-arrow-repeat" title="Lặp lại"></i></span>
                                }
                            </div>
                        </div>
                    </a>

                    <!-- Độ ưu tiên -->
                    @if (item.Priority != "None")
                    {
                        <div class="task-priority">
                            <i class="bi bi-flag-fill priority-@item.Priority.ToLower()" title="Ưu tiên: @item.Priority"></i>
                        </div>
                    }
                </div>
            }
        </div>
    }
}
else
{
    <div class="text-center p-5">
        <i class="bi bi-check2-circle" style="font-size: 4rem; color: #4b5563;"></i>
        <h4 class="mt-3">Tuyệt vời!</h4>
        <p class="text-muted">Bạn đã hoàn thành tất cả công việc.</p>
    </div>
}