@model IEnumerable<TaskManager.Data.Models.Task>

@{
    ViewData["Title"] = "Danh sách công việc";
}

<h1 class="text-center">Danh sách công việc</h1>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill"></i> Tạo công việc mới
    </a>
</div>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@item.Title</h5>
                            <span class="badge @(item.Status == "Completed" ? "bg-success" : "bg-warning text-dark")">@item.Status</span>
                        </div>
                        <h6 class="card-subtitle text-muted mt-2">Ngày tạo: @item.CreatedAt.ToShortDateString()</h6>
                        @if (item.DueDate.HasValue)
                        {
                            <h6 class="card-subtitle text-muted">Ngày hết hạn: @item.DueDate.Value.ToShortDateString()</h6>
                        }
                        <p class="card-text mt-3">@item.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center mt-4">Chưa có công việc nào được tạo.</div>
}