@model IEnumerable<TaskManager.Web.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>Họ và tên</th>
            <th>Vai trò</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="badge bg-info me-1">@role</span>
                    }
                </td>
                <td>@user.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>