@model IEnumerable<TaskManager.Web.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h1 class="text-center">Quản lý người dùng</h1>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Email</th>
            <th>Họ và tên</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>